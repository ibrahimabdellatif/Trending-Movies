<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020203"
    tools:context=".MovieDetailsActivity">


    <ImageView
        android:id="@+id/iv_movie_poster_details"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/movie_poster"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_movie_title_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:maxLines="1"
        android:paddingLeft="12dp"
        android:text="movie title"
        android:textColor="#d68915"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/iv_movie_poster_details"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_movie_date_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:paddingStart="20dp"
        android:text="2021-07-15"
        android:textColor="#d68915"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie_title_details"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/star_rating"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:paddingStart="5dp"
        android:src="@drawable/star_rate"
        app:layout_constraintEnd_toStartOf="@+id/tv_movie_rating_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie_title_details"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_movie_rating_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingStart="19dp"
        android:text="8.2"
        android:textColor="#d68915"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie_date_details"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="16dp"
        android:text="Over View"
        android:textColor="#d68915"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie_rating_details"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_movie_over_view_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:paddingLeft="20dp"
        android:text="James Bond has left active service. His peace is short-lived when Felix Leiter, an old friend from the CIA, turns up asking for help, leading Bond onto the trail of a mysterious villain armed with dangerous new technology."
        android:textColor="#d68915"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie_rating_details"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>